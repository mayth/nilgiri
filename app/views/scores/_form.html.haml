= form_for @score do |f|
  - if @score.errors.any?
    #error_explanation
      %h2= "#{pluralize(@score.errors.count, "error")} prohibited this score from being saved:"
      %ul
        - @score.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :playstyle
    = f.text_field :playstyle
  .field
    = f.label :difficulty
    = f.text_field :difficulty
  .field
    = f.label :score
    = f.number_field :score
  .field
    = f.label :player
    = f.text_field :player
  .field
    = f.label :music
    = f.text_field :music
  .field
    = f.label :season
    = f.text_field :season
  .actions
    = f.submit 'Save'
