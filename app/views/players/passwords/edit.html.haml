.row
  .small-12.columns
    %h1 Change your password
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token

      .row
        .small-12.large-2.columns
          = f.label :password, "New password", class: "right inline"
        .small-12.large-4.columns.left
          = f.password_field :password, autofocus: true
      .row
        .small-12.large-2.columns
          = f.label :password_confirmation, "Confirm new password", class: "right inline"
        .small-12.large-4.columns
          = f.password_field :password_confirmation
      .row
        .small-12.columns
          = f.submit "Change my password", class: "button"

= render "players/shared/links"
