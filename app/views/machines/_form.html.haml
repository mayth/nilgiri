= form_for @machine do |f|
  - if @machine.errors.any?
    #error_explanation
      %h2= "#{pluralize(@machine.errors.count, "error")} prohibited this machine from being saved:"
      %ul
        - @machine.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :difficulties
    = f.text_field :difficulties
  .field
    = f.label :playstyles
    = f.text_field :playstyles
  .actions
    = f.submit 'Save'
