= form_for @music do |f|
  - if @music.errors.any?
    #error_explanation
      %h2= "#{pluralize(@music.errors.count, "error")} prohibited this music from being saved:"
      %ul
        - @music.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :artist
    = f.text_field :artist
  .field
    = f.label :machine
    = f.text_field :machine
  .field
    = f.label :season
    = f.text_field :season
  .actions
    = f.submit 'Save'
