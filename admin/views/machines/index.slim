ul class="nav nav-tabs"
  li class="active" = link_to tag_icon(:list, pat(:list)), url(:machines, :index)
  li = link_to tag_icon(:plus, pat(:new)), url(:machines, :new)

div class="tabs-content"
  table class="table table-striped table-hover table-condensed" id="list"
    thead
      tr
        th class='header list-menu'
          div class='dropdown'
            a href='#' class='list-menu-toggle.dropdown-toggle dropdown-toggle' data-toggle='dropdown'
              = tag_icon :magic
              span class='caret'
            ul class='list-menu dropdown-menu' role='dropdown'
              li class='list-menu-wrapper' = link_to tag_icon(:check, pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
              li class='list-menu-wrapper list-menu-wrapper-disabled' = link_to tag_icon('check-empty', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
              li class='list-menu-divider divider'
              li class='list-menu-wrapper list-menu-wrapper-disabled'
                = link_to tag_icon(:trash, pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
                div class='list-menu-popover-delete-selected popover right'
                  div class='arrow'
                  h3 class='popover-title' = pat(:delete_selected_title)
                  div class='popover-content'
                    - form_tag url(:machines, :destroy_many), :method => :delete do
                      = hidden_field_tag :machine_ids, :'data-delete-many-ids' => true
                      = submit_tag  pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                      div class='btn btn-default btn-small cancel' = pat(:cancel)
        th class='header' = mat(:machine, :id)
        th class='header' = mat(:machine, :name)
        th class='header' = mat(:machine, :difficulties)
        th class='header' = mat(:machine, :playstyles)
        th class='header' = mat(:machine, :created_at)
        th class='header' = mat(:machine, :updated_at)
        th class='header list-row-action-header'

    tbody
      -@machines.each do |machine|
        tr class='list-row'
          td class='list-column list-selectable' = check_box_tag 'machine_ids[]', :value => machine.id, :class => 'list-selectable-checkbox'
          td class='list-column' = machine.id
          td class='list-column' = machine.name
          td class='list-column' = machine.difficulties.join(', ')
          td class='list-column' = machine.playstyles.present? ? machine.playstyles.join(', ') : 'N/A'
          td class='list-column' = time_ago_in_words(machine.created_at) + ' ago'
          td class='list-column' = time_ago_in_words(machine.updated_at) + ' ago'
          td class='list-column list-row-action'
            div class='list-row-action-wrapper'
              = link_to tag_icon(:edit), :href => url(:machines, :edit, :id => machine.id), :rel => :tooltip, :title => "#{pat(:edit)} machine", :class => 'list-row-action-wrapper-link'
              = link_to tag_icon(:trash), :rel => :tooltip, :title => "#{pat(:delete)} machine", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
              div class='popover list-row-action-popover-delete-one left'
                div class='arrow'
                h3 class='popover-title' = pat(:delete, :model => "machine")
                div class='popover-content'
                  - form_tag url(:machines, :destroy, :id => machine.id), :method => :delete do
                    = submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                    div class='btn btn-default btn-small cancel' = pat(:cancel)
